<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd
http://maven.apache.org/ASSEMBLY/2.0.0 ">
    <!-- TODO: a jarjar format would be better -->

    <id>build-server</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>it/polimi/ingsw/client/*</exclude>
                <exclude>it/polimi/ingsw/client/gui/*</exclude>
                <exclude>images/privateObj/*</exclude>
                <exclude>images/publicObj/*</exclude>
                <exclude>images/toolCards/*</exclude>
                <exclude>images/var/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <unpackOptions>
                <excludes>
                    <exclude>it/polimi/ingsw/client/*</exclude>
                    <exclude>it/polimi/ingsw/client/gui/*</exclude>
                    <exclude>images/privateObj/*</exclude>
                    <exclude>images/publicObj/*</exclude>
                    <exclude>images/toolCards/*</exclude>
                    <exclude>images/var/*</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>